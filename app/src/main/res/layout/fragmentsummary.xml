<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spin"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp" />

        <EditText
            android:id="@+id/begin"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="78dp"
            android:ems="10"
            android:hint="Begin Date"
            android:inputType="textPersonName"
            android:visibility="invisible" />


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/expchart"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:layout_alignStart="@+id/spin"
            android:layout_alignParentTop="true"
            android:layout_marginTop="450dp"
            android:layout_alignLeft="@+id/spin"></com.github.mikephil.charting.charts.PieChart>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/incchart"
            android:layout_width="355dp"
            android:layout_height="253dp"
            android:layout_alignStart="@+id/spin"
            android:layout_alignLeft="@+id/spin"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-7dp"
            android:layout_marginLeft="-7dp"
            android:layout_marginTop="161dp"></com.github.mikephil.charting.charts.PieChart>

    </RelativeLayout>

</ScrollView>